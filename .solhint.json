{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["error", "^0.4.3"],
    "reason-string": ["warn",{"maxLength":100}],
    "var-name-mixedcase":"off",
    "func-visibility": ["warn",{"ignoreConstructors":true}],
    "const-name-snakecase":true
  }
}